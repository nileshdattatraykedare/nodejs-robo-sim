{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./app/",
    "noLib": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-test.ts"
  ],
  "compileOnSave": true
}